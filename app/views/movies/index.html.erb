<%= form_tag '/movies/search', method: 'post' do %>
  <%= label_tag :movie, 'Movie' %>
  <%= text_field_tag :movie %>
  <%= submit_tag 'Search' %>
<% end %>

<% if current_user %>
  <%= link_to 'Add Movie', new_movie_path %>
<% end %>

<% if @movies.any? %>
  <% @movies.each do |movie| %>
    <%= movie.title %>
    <%= movie.description %>
  <% end %>
<% else %>
  'No movies listed. Add the first one!'
<% end %>
